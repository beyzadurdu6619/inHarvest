@{
    ViewData["Title"] = "Index2";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@using EntityLayer.Concreate
@model List<Services>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmetler</h4>
        
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Hizmet Adı</th>
                            <th>Sil</th>
                            <th>Düzenle</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ServicesID</td>
                                <td>@item.Title</td>
                                <td><a href="/Service/Delete/@item.ServicesID" class="btn btn-outline-danger"> Sil</a></td>
                                <td><a href="/Service/Edit/@item.ServicesID" class="btn btn-outline-warning"> Düzenle</a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<a href="/Service/Create" class="btn btn-outline-info">Yeni Hizmet Girişi</a>