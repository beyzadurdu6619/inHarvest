@using EntityLayer.Concreate
@model Admin
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<form method="post">

    <form method="post">
        @Html.HiddenFor(x => x.AdminID)
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Admin Bilgileri Güncelleme</h4>

                    <form class="forms-sample">
                        <div class="form-group">
                            <label for="exampleInputName1">Kullanıcı Adı</label>
                            <input type="text" class="form-control" id="exampleInputName1" placeholder="Title" asp-for="UserName">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail3">Parola</label>
                            <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Image" asp-for="Password">
                        </div>

                        <button type="submit" class="btn btn-primary me-2">Kaydet</button>
                        <button class="btn btn-light">Vazdeç</button>
                    </form>
                </div>
            </div>
        </div>

    </form>
</form>


