
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@using EntityLayer.Concreate
@model List<Admin>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Admin İşlemleri</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kullanıcı Adı</th>
                            <th>Şifre</th>
                            <th>Sil</th>
                            <th>Düzenle</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AdminID</td>
                                <td>@item.UserName</td>
                                <td>@item.Password</td>
                                <td><a href="/Admin/Delete/@item.AdminID" class="btn btn-outline-danger"> Sil</a></td>
                                <td><a href="/Admin/Edit/@item.AdminID" class="btn btn-outline-warning"> Düzenle</a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<a href="/Admin/Create" class="btn btn-outline-info">Yeni Admin Girişi</a>

