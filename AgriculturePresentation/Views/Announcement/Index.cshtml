@{
    ViewData["Title"] = "Index2";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@using EntityLayer.Concreate
@model List<Announcement>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                            <th>Aktif Yap</th>
                            <th>Pasif Yap</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.Status ? "table-success" : "table-danger")">
                                <td>@item.AnnouncementID</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td><a href="/Announcement/Delete/@item.AnnouncementID" class="btn btn-outline-danger"> Sil</a></td>
                                <td><a href="/Announcement/Edit/@item.AnnouncementID" class="btn btn-outline-success"> Düzenle</a></td>
                                <td><a href="/Announcement/Active/@item.AnnouncementID" class="btn btn-outline-warning"> Aktif Yap</a></td>
                                <td><a href="/Announcement/Deactive/@item.AnnouncementID" class="btn btn-outline-secondary"> Pasif Yap</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<a href="/Announcement/Create" class="btn btn-outline-info">Yeni Hizmet Girişi</a>