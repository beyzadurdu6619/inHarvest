@using EntityLayer.Concreate
@model Announcement

@{
    ViewData["Title"] = "Index2";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<form method="post">
  
    <form method="post">
        @Html.HiddenFor(x => x.AnnouncementID)
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Duyuru Güncelleme</h4>

                    <form class="forms-sample" method="post">
                        <div class="form-group">
                            <label for="exampleInputName1">Başlık</label>
                            <input type="text" class="form-control" id="exampleInputName1" placeholder="Başlık Giriniz." asp-for="Title">
                        </div>

                          <div class="form-group">
                            <label for="exampleInputName1">Tarih</label>
                            <input type="date" class="form-control" id="exampleInputName1" placeholder="Tarih Giriniz." asp-for="Date">
                        </div>
                        <div class="form-group">
                            <label for="exampleTextarea1">Açıklama</label>
                            <textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="Description"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                        <button class="btn btn-outline-info">Kaydet</button>
                        <button class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>

    </form>
</form>

