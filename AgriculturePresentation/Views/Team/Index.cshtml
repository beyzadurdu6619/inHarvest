
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@using EntityLayer.Concreate
@model List<Team>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım Arkadaşlarımız</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                               #
                            </th>
                            <th>
                               Ad
                            </th>
                            <th>
                               Görev
                            </th>
                            <th>
                               Sil
                            </th>
                            <th>
                                Düzenle
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="@item.ImageUrl" alt="image" />
                                </td>
                                <td>@item.PersonName</td>
                                <td>@item.Title</td>
                                <td><a href="/Team/Delete/@item.TeamID" class="btn btn-outline-danger"> Sil</a></td>
                                <td><a href="/Team/Edit/@item.TeamID" class="btn btn-outline-warning"> Düzenle</a></td>
                             
                            </tr>
                        }
          
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<a href="/Team/Create" class="btn btn-outline-info">Yeni Takım Arkadaşı Kaydı</a>